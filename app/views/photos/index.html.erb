<!--  render the photos-->
<% @pictures.each do | picture | %>
  <!-- <img src="<%#= picture.images.thumbnail.url%>"> -->
  <%=link_to(image_tag("#{picture.images.thumbnail.url}", :class => 'image',  data: {id: "#{picture.id}", url: "#{picture.images.thumbnail.url}"})) %>

<% end %>
<!-- search bar -->
<%= form_tag '/', method: :get do %>
  <%= label_tag( "Search:") %>
  <!--  saving the tag_name in here-->
  <%= text_field_tag :tag_name %><br>
  <%= date_field_tag :start_date %> <br>
  <%= date_field_tag :end_date %>
<%= submit_tag "Search" %>
<% end %>

<% if current_user %>
<%= select('name','selected_name', @gallery) %>
<% end %>
