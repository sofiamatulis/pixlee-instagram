<body class = "log-in">
  <div class="log-in-form">
    <div class ="header-log-in">Log in</div>

    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %><br>
        <%= text_field_tag :email, params[:email] %><br><br>
      </div>
      <div class="field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <br>
      <div class="actions"><%= submit_tag "Log in", :class => 'submitting'%></div>
    <% end %>
  </div>
  <img class="arrow"></img>

</body>

