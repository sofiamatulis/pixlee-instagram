<body class="user-form">

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div> <br>


  <div class="field">
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
  </div> <br>
  <div class="field">
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </div><br>
  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password"%><br>
    <%= f.password_field :password_confirmation %>
  </div><br>

  <div class="actions">
    <%= f.submit 'Create User', :class => 'submitting'%>
    <% end %>

  </div>

</body>

<!-- user form to create a new user -->
